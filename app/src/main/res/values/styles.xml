<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="popwin_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_pop_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_exit</item>
    </style>

    <declare-styleable name="BlinkLayout">
        <attr name="blink_color" format="color|reference"/>
        <attr name="blink_animation_duration" format="integer|reference"/>
    </declare-styleable>

</resources>
